<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="ir.iamnovinfar.Shorten_link.MainActivity">


    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:iss_auto_cycle="true"
        app:iss_delay="0"
        app:iss_period="5000" />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logoapp"
        android:id="@+id/logoapp_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_70ssp"></ImageView>


    <TextView
        android:id="@+id/txt_asset_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_above="@+id/amirkaaa"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logoapp_img"
        android:layout_marginTop="@dimen/_10ssp"
        android:drawablePadding="6dp"

        android:fontFamily="@font/byekan"
        android:gravity="center|center_horizontal|bottom"
        android:text="
&#34;به اپلیکیشن لینک کوتاه‌کن \n خوش آمدید&#34;"
        android:textAlignment="0"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_30ssp"
        ></TextView>


    <RelativeLayout
        android:id="@+id/amir_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"

        >

        <RelativeLayout
            android:id="@+id/amirkaaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30ssp"
            android:layout_marginTop="@dimen/_20ssp"
            android:layout_marginRight="@dimen/_30ssp"
            android:background="@drawable/edit_back_url">



                <EditText
                    android:id="@+id/edt_password_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_52ssp"
                    android:drawableRight="@drawable/ic_baseline_insert_link_24"
                    android:drawablePadding="@dimen/_9ssp"
                    android:fontFamily="@font/byekan"
                    android:hint="لینک خود را وارد کنید"
                    android:background="@drawable/edt_back"
                    android:inputType="textUri"
                    android:textSize="@dimen/_14ssp"


                    />



        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_52ssp"
            android:layout_below="@+id/amirkaaa"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_30ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginRight="@dimen/_30ssp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            tools:ignore="DuplicateClickableBoundsCheck">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/button_gradient">

                <RelativeLayout
                    android:id="@+id/btn_giveshorturl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"

                    android:focusable="true">

                    <TextView
                        android:id="@+id/gradient_button_3_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"

                        android:ellipsize="end"
                        android:fontFamily="@font/byekan"
                        android:lines="1"
                        android:text="دریافت کوتاه لینک"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_19ssp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loading_gif"
        android:src="@drawable/loading"
        />

</RelativeLayout>