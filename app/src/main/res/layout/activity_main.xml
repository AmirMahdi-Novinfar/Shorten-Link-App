<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="ir.iamnovinfar.Shorten_link.MainActivity">


    <com.mmurphy.imagedotslider.ImageSliderView
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:imageResources="@array/image_id_array" />

    <com.adivery.sdk.AdiveryBannerAdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/banner_ad"
        android:layout_below="@+id/logoapp_img"
        app:placement_id="73369a4a-3ae8-4a4c-bc7f-4ce621aa3874"
        app:banner_size="banner"/>

    <ImageView
        android:id="@+id/logoapp_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_90ssp"
        android:src="@drawable/logoapp"></ImageView>


    <TextView
        android:id="@+id/txt_asset_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoapp_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10ssp"
        android:drawablePadding="6dp"

        android:fontFamily="@font/byekan"
        android:gravity="center|center_horizontal|bottom"
        android:text="
&#34;به لینک کوتاه‌کن خوش آمدید&#34;"
        android:textAlignment="0"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_23ssp"></TextView>


    <RelativeLayout
        android:id="@+id/amir_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_asset_type_name"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/amirkaaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30ssp"
            android:layout_marginTop="@dimen/_20ssp"
            android:layout_marginRight="@dimen/_30ssp"

            android:background="@drawable/edit_back_url">


            <EditText
                android:id="@+id/edt_password_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50ssp"
                android:background="@drawable/edt_back"

                android:drawableRight="@drawable/ic_baseline_insert_link_24"
                android:drawablePadding="@dimen/_9ssp"
                android:fontFamily="@font/byekan"
                android:hint="لینک خود را وارد کنید"
                android:inputType="textUri"
                android:padding="15dp"
                android:textSize="@dimen/_14ssp"


                />


        </RelativeLayout>


    </RelativeLayout>


    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/btn_giveshorturl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"

        android:layout_marginBottom="40dp"
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/byekan"
        android:text="کوتاه کن"

        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        app:spinning_bar_color="@color/white"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold" />
    app:spinning_bar_width="4dp" <!-- Optional -->
    app:spinning_bar_color="#FFF" <!-- Optional -->
    app:spinning_bar_padding="6dp" <!-- Optional -->


    // btn_giveshorturl ->id
    // android:text="دریافت لینک کوتاه" ->text


</RelativeLayout>